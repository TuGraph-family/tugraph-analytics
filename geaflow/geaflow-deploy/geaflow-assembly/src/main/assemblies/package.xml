<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>package</id>
	<formats>
		<format>tar.gz</format>
	</formats>

	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>geaflow-${project.version}</baseDirectory>

	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<unpack>false</unpack>
			<useProjectArtifact>false</useProjectArtifact>
			<useProjectAttachments>false</useProjectAttachments>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<useTransitiveFiltering>true</useTransitiveFiltering>

			<includes>
				<include>org.slf4j:slf4j-log4j12</include>
				<include>log4j:log4j</include>
			</includes>
		</dependencySet>
	</dependencySets>

	<files>
		<!-- copy fat jar -->
		<file>
			<source>target/geaflow-assembly-${project.version}.jar</source>
			<outputDirectory>lib/</outputDirectory>
			<fileMode>0644</fileMode>
		</file>

		<!-- copy log4j conf -->
		<file>
			<source>src/main/geaflow-bin/conf/log4j.properties</source>
			<outputDirectory>conf</outputDirectory>
			<fileMode>0644</fileMode>
		</file>
		<!-- copy geaflow conf file-->
		<file>
			<source>src/main/geaflow-bin/conf/geaflow-conf.yml</source>
			<outputDirectory>conf</outputDirectory>
			<fileMode>0644</fileMode>
		</file>

	</files>

	<fileSets>

		<!-- copy *.txt files -->
		<fileSet>
			<directory>src/main/geaflow-bin</directory>
			<outputDirectory/>
			<fileMode>0644</fileMode>
			<includes>
				<include>*.txt</include>
			</includes>
		</fileSet>
		<!-- copy *.sh files -->
		<fileSet>
			<directory>src/main/geaflow-bin/bin</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
			<includes>
				<include>*.sh</include>
			</includes>
		</fileSet>

	</fileSets>

</assembly>
